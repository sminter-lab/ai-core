# ===============================
# ai-core Environment Variables
# ===============================

# ---- Core System ----
AI_CORE_ENV=local
AI_CORE_LOG_LEVEL=info

# ---- Notion Integration ----
NOTION_API_KEY=
NOTION_DATABASE_ID=

# ---- LLM / AI Providers ----
LLM_PROVIDER=ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# Optional cloud fallback
OPENAI_API_KEY=

# ---- File Ingest / Storage ----
RAW_DATA_PATH=/data/raw
PROCESSED_DATA_PATH=/data/processed

# ---- Scheduling / Workers ----
WORKER_HEARTBEAT_INTERVAL=30
WORKER_MAX_RETRIES=3

# ---- Services / APIs ----
API_HOST=0.0.0.0
API_PORT=8080

# ---- Security ----
ALLOW_DESTRUCTIVE_ACTIONS=false
